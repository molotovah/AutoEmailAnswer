{
  "manifest_version": 2,
  "name": "Outlook AI Reply",
  "version": "1.0",
  "description": "An advanced chrome extension that reads your Outlook web app emails, generates AI-powered replies, and copies them to your clipboard.",
  "icons": {
    "16": "icons/icon16.jpg",
    "32": "icons/icon32.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  "content_scripts": [{
    "matches": ["*://outlook.live.com/*", "*://outlook.office.com/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["clipboardWrite", "storage"],
  "options_page": "options.html",
  "web_accessible_resources": ["icons/*"]
}
